<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kangye.linshow.core.dao.DemoDao">

	<resultMap id="BaseResultMap" type="com.kangye.linshow.core.entity.Demo">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
	</resultMap>
	
	 <sql id="Base_Column_List">
		id,
		name
	</sql>
	
	<insert id="insert" parameterType="com.kangye.linshow.core.entity.Demo">
		insert into demo (
			id,
			name
		) values(
			#{id},
			#{name}
		)
	</insert>
	
	<!-- 依据条件查询单个标的 -->
	<select id="quertAll" resultMap="BaseResultMap">
		select 
			<include refid="Base_Column_List"></include>
		from demo 
	</select>

</mapper>